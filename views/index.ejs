<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Diary</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <h1 data-position="header">My Diary</h1>

    <section data-position="add-diary">
      <form action="/posts" method="POST">
        <div class="inputs">
        <input type="text" placeholder="Date" name="name" />
        <input type="text" placeholder="Diary" name="post" class="input-second" />
        <button type="submit" style="text-align: center;">Submit</button>
        </div>
      </form>
    </section>

    <section data-position="posts">
      <h2>Posts</h2>

      <div class="posts-list">
      <ul class="posts">
        <% for(var i = 0; i < posts.length; i++) {%>
        <li class="posts">
          <span class="span-first"><%= posts[i].name %></span>
          <span><%= posts[i].post %></span>
          <button value=<%= posts[i].name %> class="delete-button">Delete</button>
          <button value=<%= posts[i].name %> class="edit-button">Edit</button>
        </li>
        <% } %>
      </ul>
      <div class="input-edit">
      <input type="text" class="edit-input" placeholder="Edit your diary"/>
      </div>  
    </div>
    </section>

    <script src="/main.js"></script>
  </body>
</html>
